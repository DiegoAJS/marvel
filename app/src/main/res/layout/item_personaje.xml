<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_item_foto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:src="@android:drawable/ic_menu_gallery"/>

        <TextView
            android:id="@+id/tv_item_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_item_foto"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/iv_item_foto"
            android:text="Nombre" />
        <TextView
            android:id="@+id/tv_item_estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_item_foto"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_toRightOf="@+id/iv_item_foto"
            android:layout_below="@+id/tv_item_nombre"
            android:text="estado" />

        <TextView
            android:id="@+id/tv_item_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:layout_below="@+id/iv_item_foto"
            android:text="Descripcion"
            android:maxLines="3"
            android:ellipsize="end"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>
